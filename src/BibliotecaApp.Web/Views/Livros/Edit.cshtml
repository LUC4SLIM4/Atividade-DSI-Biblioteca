@model LivroViewModel

@{
    ViewData["Title"] = "Editar Livro";
}

<h1><i class="bi bi-pencil"></i> Editar Livro</h1>

<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="DataCriacao" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="mb-3">
                <label asp-for="Titulo" class="form-label"></label>
                <input asp-for="Titulo" class="form-control" />
                <span asp-validation-for="Titulo" class="text-danger"></span>
            </div>
            
            <div class="mb-3">
                <label asp-for="ISBN" class="form-label"></label>
                <input asp-for="ISBN" class="form-control" />
                <span asp-validation-for="ISBN" class="text-danger"></span>
            </div>
            
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="AnoPublicacao" class="form-label"></label>
                    <input asp-for="AnoPublicacao" class="form-control" type="number" />
                    <span asp-validation-for="AnoPublicacao" class="text-danger"></span>
                </div>
                
                <div class="col-md-6 mb-3">
                    <label asp-for="Genero" class="form-label"></label>
                    <input asp-for="Genero" class="form-control" />
                    <span asp-validation-for="Genero" class="text-danger"></span>
                </div>
            </div>
            
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="NumeroPaginas" class="form-label"></label>
                    <input asp-for="NumeroPaginas" class="form-control" type="number" />
                    <span asp-validation-for="NumeroPaginas" class="text-danger"></span>
                </div>
                
                <div class="col-md-6 mb-3">
                    <label asp-for="Preco" class="form-label"></label>
                    <input asp-for="Preco" class="form-control" type="number" step="0.01" />
                    <span asp-validation-for="Preco" class="text-danger"></span>
                </div>
            </div>
            
            <div class="mb-3">
                <label asp-for="AutorId" class="form-label"></label>
                <select asp-for="AutorId" class="form-select" asp-items="ViewBag.Autores">
                    <option value="">Selecione um autor</option>
                </select>
                <span asp-validation-for="AutorId" class="text-danger"></span>
            </div>
            
            <div class="mt-4">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-save"></i> Salvar Alterações
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Voltar
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

