@model LivroViewModel

@{
    ViewData["Title"] = "Excluir Livro";
}

<h1><i class="bi bi-trash"></i> Excluir Livro</h1>

<div class="alert alert-danger mt-3">
    <h4>Tem certeza que deseja excluir este livro?</h4>
    <p>Esta ação não pode ser desfeita.</p>
</div>

<hr />
<div class="row">
    <div class="col-md-8">
        <dl class="row">
            <dt class="col-sm-3">Título</dt>
            <dd class="col-sm-9">@Model.Titulo</dd>

            <dt class="col-sm-3">ISBN</dt>
            <dd class="col-sm-9"><code>@Model.ISBN</code></dd>

            <dt class="col-sm-3">Autor</dt>
            <dd class="col-sm-9">@Model.AutorNome</dd>

            <dt class="col-sm-3">Ano de Publicação</dt>
            <dd class="col-sm-9">@Model.AnoPublicacao</dd>

            <dt class="col-sm-3">Gênero</dt>
            <dd class="col-sm-9">
                <span class="badge bg-secondary">@Model.Genero</span>
            </dd>

            <dt class="col-sm-3">Preço</dt>
            <dd class="col-sm-9">@Model.Preco.ToString("C")</dd>
        </dl>

        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">
                <i class="bi bi-trash"></i> Confirmar Exclusão
            </button>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Cancelar
            </a>
        </form>
    </div>
</div>

