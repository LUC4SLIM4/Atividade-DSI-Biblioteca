@model IEnumerable<AutorViewModel>

@{
    ViewData["Title"] = "Autores";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1><i class="bi bi-person-circle"></i> Autores</h1>
    <a asp-action="Create" class="btn btn-success">
        <i class="bi bi-plus-circle"></i> Novo Autor
    </a>
</div>

<div class="card shadow mb-3">
    <div class="card-body">
        <div class="input-group">
            <span class="input-group-text"><i class="bi bi-search"></i></span>
            <input type="text" class="form-control" id="searchInput" placeholder="Buscar por nome, email ou nacionalidade..." />
        </div>
        <small class="text-muted">A busca é realizada dinamicamente sem recarregar a página</small>
    </div>
</div>

<div id="resultadosBusca">
    @if (!Model.Any())
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> Nenhum autor cadastrado.
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Nome</th>
                        <th>Email</th>
                        <th>Data de Nascimento</th>
                        <th>Nacionalidade</th>
                        <th>Livros</th>
                        <th class="text-center">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var autor in Model)
                    {
                        <tr>
                            <td>@autor.Nome</td>
                            <td>@autor.Email</td>
                            <td>@autor.DataNascimento.ToString("dd/MM/yyyy")</td>
                            <td>@autor.Nacionalidade</td>
                            <td>
                                <span class="badge bg-primary">@autor.QuantidadeLivros</span>
                            </td>
                            <td class="text-center">
                                <a asp-action="Details" asp-route-id="@autor.Id" class="btn btn-sm btn-info" title="Detalhes">
                                    <i class="bi bi-eye"></i>
                                </a>
                                <a asp-action="Edit" asp-route-id="@autor.Id" class="btn btn-sm btn-warning" title="Editar">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@autor.Id" class="btn btn-sm btn-danger" title="Excluir">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            let timeoutId;
            
            $('#searchInput').on('keyup', function () {
                clearTimeout(timeoutId);
                const searchTerm = $(this).val();
                
                timeoutId = setTimeout(function () {
                    $.ajax({
                        url: '@Url.Action("Search", "Autores")',
                        type: 'GET',
                        data: { searchTerm: searchTerm },
                        success: function (data) {
                            atualizarResultados(data);
                        },
                        error: function () {
                            alert('Erro ao realizar a busca.');
                        }
                    });
                }, 300);
            });

            function atualizarResultados(autores) {
                if (autores.length === 0) {
                    $('#resultadosBusca').html(
                        '<div class="alert alert-warning">' +
                        '<i class="bi bi-exclamation-triangle"></i> Nenhum autor encontrado.' +
                        '</div>'
                    );
                    return;
                }

                let html = '<div class="table-responsive"><table class="table table-striped table-hover">';
                html += '<thead class="table-dark"><tr>';
                html += '<th>Nome</th><th>Email</th><th>Data de Nascimento</th><th>Nacionalidade</th><th>Livros</th><th class="text-center">Ações</th>';
                html += '</tr></thead><tbody>';

                autores.forEach(function (autor) {
                    const dataNascimento = new Date(autor.dataNascimento).toLocaleDateString('pt-BR');
                    html += '<tr>';
                    html += '<td>' + autor.nome + '</td>';
                    html += '<td>' + autor.email + '</td>';
                    html += '<td>' + dataNascimento + '</td>';
                    html += '<td>' + autor.nacionalidade + '</td>';
                    html += '<td><span class="badge bg-primary">' + autor.quantidadeLivros + '</span></td>';
                    html += '<td class="text-center">';
                    html += '<a href="/Autores/Details/' + autor.id + '" class="btn btn-sm btn-info" title="Detalhes"><i class="bi bi-eye"></i></a> ';
                    html += '<a href="/Autores/Edit/' + autor.id + '" class="btn btn-sm btn-warning" title="Editar"><i class="bi bi-pencil"></i></a> ';
                    html += '<a href="/Autores/Delete/' + autor.id + '" class="btn btn-sm btn-danger" title="Excluir"><i class="bi bi-trash"></i></a>';
                    html += '</td></tr>';
                });

                html += '</tbody></table></div>';
                $('#resultadosBusca').html(html);
            }
        });
    </script>
}

